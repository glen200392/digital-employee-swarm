# API Keys — 設定至少一個即可啟用 LLM 模式
# 優先順序：Anthropic → OpenAI → Google
ANTHROPIC_API_KEY=your-api-key-here
OPENAI_API_KEY=your-api-key-here
GOOGLE_API_KEY=your-api-key-here

# Vector Store 設定
VECTOR_STORE_MODE=disk           # disk | memory（memory 僅用於測試）
QDRANT_PATH=./data/qdrant        # 本地 Qdrant 路徑
QDRANT_HOST=                     # 遠端 Qdrant Server host（留空用本地）
QDRANT_PORT=6333                 # 遠端 Qdrant Server port

# Session Store 設定
SESSION_DB_PATH=./data/sessions.db
